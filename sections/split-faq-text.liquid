<style>
  .split-faqs-text-container {
    display: flex;
    padding: 40px;
  }

  .split-faqs-text__text-container {
    display: flex;
    flex-direction: column;
    text-align: left;
    align-items: flex-start;
    width: 50%;
    padding: 0 20px;
  }

  .split-faqs-text__heading {
    margin-bottom: 15px;
  }
  
  .ts-faqs-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
    text-align: center;
    width: 50%;
  }

  .ts-faq {
    border: 1px solid #33333333;
    text-align: left;
    width: 80%;
    padding: 25px;
    position: relative;
    overflow: visible;
    height: fit-content;
  }

  .ts-faq[open] {
    box-shadow: inset 0 0 15px 5px rgba(243, 200, 207, 0.7);
  }

  .ts-faq svg {
    display: block;
    position: absolute;
    top: 34px;
    right: 15px;
  }

  .ts-faq .dropdown-down {
    display: block; /* Show down arrow by default */
    z-index: 99999;
  }

  .ts-faq .dropdown-up {
    display: none; /* Hide up arrow by default */
  }

  .ts-faq[open] .dropdown-up {
    display: block;
  }

  .ts-faq[open] .dropdown-down {
    display: none;
  } 

  .ts-faq summary::-webkit-details-marker {
    display: none;
  }

  .ts-faq summary::marker {
    display: none;
  }

  .ts-faq-heading {
    font-size: 15pt;
    font-weight: 600;
    list-style: none;
  }

  .ts-faq-body {
    margin-top: 20px;
  }

  @media only screen and (max-width: 750px) {
    .split-faqs-text-container {
      flex-direction: column;
      text-align: center;
      align-items: center;
      padding: 20px 0;
      gap: 40px;
    }

    .split-faqs-text__text-container {
      width: 100%;
      text-align: center;
      align-items: center;
    }

    .ts-faqs-container {
      width: 100%;
    }
  }
</style>

<section class="split-faqs-text-container">
  <div class="split-faqs-text__text-container">
    <h2 class="split-faqs-text__heading">{{ section.settings.heading }}</h2>
    <p>{{ section.settings.body }}</p>
    {%-
      render 'button-block' with
      wrapper_class: "image-with-text__text-container-button section-blocks__button",
      link: section.settings.button_link,
      label: section.settings.button_text,
      button_style: "btn--primary",
      is_overlay: true,
      button_alignment: "left",
      buttons_can_inline: true,
      forloop: forloop
    -%}
  </div>
  <div class="ts-faqs-container">
    {% for block in section.blocks %}
      <details class="ts-faq">
        <summary class="ts-faq-heading">
          {{ block.settings.faq-heading }}
          <svg class="dropdown-up" xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12" fill="none">
            <path d="M1.56348 10.0066L9.00011 2.57L16.4367 10.0066" stroke="#333333" stroke-width="2.5" stroke-linecap="round"/>
          </svg>
          <svg class="dropdown-down" xmlns="http://www.w3.org/2000/svg" width="18" height="11" viewBox="0 0 18 11" fill="none">
            <path d="M1.56348 1.56982L9.00011 9.00642L16.4367 1.56982" stroke="#333333" stroke-width="2.5" stroke-linecap="round"/>
          </svg>
        </summary>
        <p class="ts-faq-body">{{ block.settings.faq-body }}</p>
      </details>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Split Text + Faqs",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section heading"
      },
      {
        "type": "richtext",
        "id": "body",
        "label": "Section body text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button url"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "faq",
        "settings": [
          {
            "type": "text",
            "label": "FAQ Heading",
            "id": "faq-heading",
          },
          {
            "type": "richtext",
            "label": "FAQ Body",
            "id": "faq-body",
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Split Text + Faqs",
        "blocks": []
      }
    ]
  }
{% endschema %}