      slides.forEach(slide => slide.classList.remove('active'));
      currentSlide = (n + slides.length) % slides.length;
      slides[currentSlide].classList.add('active');
    }
    
    let slideInterval = setInterval(() => showSlide(currentSlide + 1), 7000); // Auto-rotate every 7s

    const slideshow = document.querySelector('.double-showcase__slideshow2');
    slideshow.addEventListener('mouseenter', () => clearInterval(slideInterval));
    slideshow.addEventListener('mouseleave', () => {
      slideInterval = setInterval(() => showSlide(currentSlide + 1), 7000);
    });

    prevArrow.addEventListener('click', () => {
      clearInterval(slideInterval); // Reset auto-rotate
      showSlide(currentSlide - 1);
      slideInterval = setInterval(() => showSlide(currentSlide + 1), 7000);
    });
    nextArrow.addEventListener('click', () => {
      clearInterval(slideInterval); // Reset auto-rotate
      showSlide(currentSlide + 1);
      slideInterval = setInterval(() => showSlide(currentSlide + 1), 7000);
    });
    
    showSlide(0); // Initialize first slide
  });
</script>

