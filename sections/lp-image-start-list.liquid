{{ 'lp-image-start-list.css' | asset_url | stylesheet_tag }}

<section class="lp-image-start-list" style="padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px;">
  <div class="section lp-image-start-list__container section--vertical-padding-none">
    {% if section.settings.main_image %}
      <div class="lp-image-start-list__image">
        <img src="{{ section.settings.main_image | img_url: '800x800' }}" 
             alt="{{ section.settings.main_image.alt | default: section.settings.heading }}"
             loading="lazy">
      </div>
    {% endif %}
    
    <div class="lp-image-start-list__content">
      {% if section.settings.heading != blank %}
        <h2 class="lp-image-start-list__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="lp-image-start-list__text">{{ section.settings.text }}</div>
      {% endif %}
      
      {% if section.blocks.size > 0 %}
        <div class="lp-image-start-list__blocks">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'start_list_item' %}
                <div class="lp-image-start-list__list-item" {{ block.shopify_attributes }}>
                  {% if block.settings.start_image %}
                    <div class="lp-image-start-list__list-icon">
                      <img src="{{ block.settings.start_image | img_url: '40x40' }}" 
                           alt="{{ block.settings.start_image.alt | default: 'List item icon' }}"
                           loading="lazy">
                    </div>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <div class="lp-image-start-list__list-text">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              {% when 'button' %}
                {% if block.settings.button_text != blank %}
                  <div class="lp-image-start-list__button" {{ block.shopify_attributes }}>
                    <a href="{{ block.settings.button_url | default: '#' }}" 
                       class="btn btn--{{ block.settings.button_style | default: 'primary' }}">
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .lp-image-start-list {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
    }
  }
</style>

{% schema %}
{
  "name": "LP Image Start List",
  "tag": "section",
  "class": "lp-image-start-list-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Bronzing Drops Upgraded"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Blendrops delivers daily sun protection with skin-loving ingredients for a glow that goes beyond UV defense.</p>"
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 50
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "start_list_item",
      "name": "Start List Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "start_image",
          "label": "Start Icon Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>SPF Protection You'll Actually Wear</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Blendrops"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "primary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LP Image Start List",
      "blocks": [
        {
          "type": "start_list_item",
          "settings": {
            "text": "<p>SPF Protection You'll Actually Wear</p>"
          }
        },
        {
          "type": "start_list_item",
          "settings": {
            "text": "<p>Helps Hydrate, Protect, Prime & Enhance in One Step</p>"
          }
        },
        {
          "type": "start_list_item",
          "settings": {
            "text": "<p>Lightweight, Hybrid SPF 46 With No White Cast</p>"
          }
        },
        {
          "type": "start_list_item",
          "settings": {
            "text": "<p>Color-Correcting Tranexamic & Skin-Plumping Polyglutamic Acids</p>"
          }
        },
        {
          "type": "button",
          "settings": {
            "button_text": "Shop Blendrops",
            "button_style": "primary"
          }
        }
      ]
    }
  ]
}
{% endschema %}
