{{ 'lp-product-grid.css' | asset_url | stylesheet_tag }}
{{ 'lp-product-card-static.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} .lp-product-grid {
    padding-top: {{ section.settings.padding_top | append: 'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};
    background-color: {{ section.settings.background_color }};
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .lp-product-grid {
      padding-top: {{ section.settings.padding_top_mob | append: 'px' }};
      padding-bottom: {{ section.settings.padding_bottom_mob | append: 'px' }};
    }
  }
{%- endstyle -%}

<div class="lp-product-grid">
  <div class="section section--vertical-padding-none">
    <div class="lp-product-grid__container">
      {% if section.settings.heading != blank %}
        <div class="lp-product-grid__heading">
          <h2>{{ section.settings.heading }}</h2>
          {% if section.settings.description != blank %}
            <div class="lp-product-grid__description">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="lp-product-grid__items" style="--columns-desktop: {{ section.settings.columns_desktop }}; --columns-mobile: {{ section.settings.columns_mobile }};">
        {% for block in section.blocks %}
          <div class="lp-product-grid__item" {{ block.shopify_attributes }}>
            {%- render 'lp-product-card-static', block_settings: block.settings -%}
          </div>
        {% endfor %}
      </div>

      {% if section.settings.loading_text != blank %}
        <div class="lp-product-grid--loading-text">
            {{ section.settings.loading_text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "LP Product Grid",
  "class": "section-lp-product-grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "textarea",
      "id": "loading_text",
      "label": "Loading text"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Columns (Desktop)",
      "default": 4
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "label": "Columns (Mobile)",
      "default": "2"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "name": "Product Card",
      "type": "product-card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "badge_title",
          "label": "Badge Title",
          "info": "Optional badge to display on the card"
        },
        {
          "type": "image_picker",
          "id": "custom_product_image",
          "label": "Custom Product Image",
          "info": "Override the default product image"
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom Product Title",
          "info": "Override the default product title"
        },
        {
          "type": "textarea",
          "id": "custom_description",
          "label": "Custom Description",
          "info": "Optional custom description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LP Product Grid"
    }
  ]
}
{% endschema %}

