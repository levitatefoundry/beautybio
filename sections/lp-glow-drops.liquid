{{ 'lp-glow-drops.css' | asset_url | stylesheet_tag }}

<section class="lp-glow-drops" style="
  {% if section.settings.background_image != blank %}
    background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  {% endif %}
">
  <div class="section">
    <div class="lp-glow-drops-container">
      <div class="lp-glow-drops-content">
        <div class="lp-glow-drops-text">
          {% if section.settings.heading != blank %}
            <h2 class="lp-glow-drops-heading">{{ section.settings.heading }}</h2>
          {% endif %}
        </div>
        
        <div class="lp-glow-drops-countdown">
          {% if section.settings.countdown_title != blank %}
            <h3 class="lp-glow-drops-countdown-title">{{ section.settings.countdown_title }}</h3>
          {% endif %}
          
          <div class="lp-glow-drops-timer-wrapper">
            {%- liquid
              assign date_parts = section.settings.countdown_date | split: '/'
              assign month_num = date_parts[0] | plus: 0
              assign day_num = date_parts[1] | plus: 0
              assign year_num = date_parts[2] | plus: 0
              
              assign time_parts = section.settings.countdown_time | split: ':'
              assign hour_num = time_parts[0] | plus: 0
              assign minute_num = time_parts[1] | default: 0 | plus: 0
              
              case month_num
                when 1
                  assign month_name = 'january'
                when 2
                  assign month_name = 'february'
                when 3
                  assign month_name = 'march'
                when 4
                  assign month_name = 'april'
                when 5
                  assign month_name = 'may'
                when 6
                  assign month_name = 'june'
                when 7
                  assign month_name = 'july'
                when 8
                  assign month_name = 'august'
                when 9
                  assign month_name = 'september'
                when 10
                  assign month_name = 'october'
                when 11
                  assign month_name = 'november'
                when 12
                  assign month_name = 'december'
              endcase
            -%}
            {%-
              render 'countdown-timer' with
              year: year_num,
              month: month_name,
              day: day_num,
              hour: hour_num,
              minute: minute_num,
              size: 'large',
              time_zone_selection: 'shop',
              hide_timer_on_complete: false
            -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
  #shopify-section-{{ section.id }} .lp-glow-drops-heading {
    color: {{ section.settings.heading_color }};
    {% if section.settings.heading_font_size_desktop != blank %}
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    {% endif %}
  }
  
  #shopify-section-{{ section.id }} .lp-glow-drops-countdown-title {
    color: {{ section.settings.countdown_title_color }};
    {% if section.settings.countdown_title_font_size != blank %}
      font-size: {{ section.settings.countdown_title_font_size }}px;
    {% endif %}
  }
  
  #shopify-section-{{ section.id }} .countdown-timmer__amount {
    color: {{ section.settings.timer_number_color }};
  }
  
  #shopify-section-{{ section.id }} .countdown-timer__type {
    color: {{ section.settings.timer_label_color }};
  }
  
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .lp-glow-drops-heading {
      {% if section.settings.heading_font_size_mobile != blank %}
        font-size: {{ section.settings.heading_font_size_mobile }}px !important;
      {% endif %}
    }
  }
  
  {% if section.settings.background_image_mobile != blank %}
    @media (max-width: 768px) {
      #shopify-section-{{ section.id }} .lp-glow-drops {
        background-image: url('{{ section.settings.background_image_mobile | image_url: width: 768 }}') !important;
      }
    }
  {% endif %}
{% endstyle %}

{% schema %}
{
  "name": "LP Glow Drops",
  "tag": "section",
  "class": "section-lp-glow-drops",
  "settings": [
    {
      "type": "header",
      "content": "Main Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "The Glow Drops Soon."
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Section Title Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_font_size_desktop",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Section Title Font Size (Desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "heading_font_size_mobile",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Section Title Font Size (Mobile)",
      "default": 38
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "header",
      "content": "Countdown Settings"
    },
    {
      "type": "text",
      "id": "countdown_title",
      "label": "Countdown Title",
      "default": "Black Friday Starts In:"
    },
    {
      "type": "color",
      "id": "countdown_title_color",
      "label": "Countdown Title Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "countdown_title_font_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Countdown Title Font Size",
      "default": 18
    },
    {
      "type": "color",
      "id": "timer_number_color",
      "label": "Timer Numbers Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "timer_label_color",
      "label": "Timer Labels Color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Black Friday Date & Time"
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown Date",
      "default": "11/28/2025",
      "info": "Enter date in MM/DD/YYYY format (e.g., 11/28/2025 for November 28, 2025)"
    },
    {
      "type": "text",
      "id": "countdown_time",
      "label": "Countdown Time",
      "default": "00:00",
      "info": "Enter time in HH:MM format using 24-hour time (e.g., 00:00 for midnight, 14:30 for 2:30 PM)"
    }
  ],
  "presets": [
    {
      "name": "LP Glow Drops"
    }
  ]
}
{% endschema %}

