<div
  class="image-row-{{ section.id }} page-width image-row"
  data-section-id="{{ section.id }}">

  {%- if section.settings.enable_header -%}
    <div
      class="heading-section-{{ section.id }} heading-section"
      {% unless section.settings.custom_class == blank %} id="{{ section.settings.custom_class }}" {% endunless %}
      data-block-id="{{ section.id }}">
      <{{ section.settings.section_header_level }} class="heading-block__heading">{{ section.settings.section_header_text }}</{{ section.settings.section_header_level }}>
    <div class="heading-block__subheading">{{ section.settings.section_header_subheader_text }}</div>
  </div>
  {%- endif -%}

  <div class="image-row__container">
    {% for i in (1..4) %}
      {% assign image_row_var = 'imagerow_' | append: i %}
      {% assign image_row = section.settings[image_row_var] %}
      {% if image_row != blank %}
        {% assign header_text_var = 'header_text_' | append: i %}
        {% assign subheader_text_var = 'subheader_text_' | append: i %}
        {% assign page_link_var = 'imagerow_image_' | append: i | append: '_link' %}
        {% assign ext_link_var = 'imagerow_image_' | append: i | append: '_ext_link' %}
        {% assign header_text = section.settings[header_text_var] %}
        {% assign subheader_text = section.settings[subheader_text_var] %}
        {% assign page_link = section.settings[page_link_var] %}
        {% assign ext_link = section.settings[ext_link_var] %}
        {% if ext_link != blank %}<a href="{{ ext_link }}" class="image-row__link" aria-label="{% if header_text %}{{ header_text }}{% else %}Image {{ i }} link{% endif %}">{% endif %}
          <div class="image-row__image {% if ext_link == blank and page_link != blank %} image-row__hover-cursor" onclick="pep.scrollOnClick('{{ page_link }}')"{% else %}"{% endif %}>
            <img
              srcset="{%- if image_row.width >= 165 -%}{{ image_row | img_url: '165x' }} 165w,{%- endif -%}
                {%- if image_row.width >= 360 -%}{{ image_row | img_url: '360x' }} 360w,{%- endif -%}
                {%- if image_row.width >= 535 -%}{{ image_row | img_url: '535x' }} 535w,{%- endif -%}
                {%- if image_row.width >= 750 -%}{{ image_row | img_url: '750x' }} 750w,{%- endif -%}
                {%- if image_row.width >= 1070 -%}{{ image_row | img_url: '1070x' }} 1070w,{%- endif -%}
                {%- if image_row.width >= 1500 -%}{{ image_row | img_url: '1500x' }} 1500w,{%- endif -%}
                {{ image_row | img_url: 'master' }} {{ image_row.width }}w"
              src="{{ image_row | img_url: '1500x' }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
              class="image-row__image--{{ i }}"
              alt="{{ image_row.alt | escape }}"
              loading="lazy"
              width="{{ image_row.width }}"
              height="{{ image_row.height }}"
            >

            {% if header_text != blank %}
              <{{ section.settings.header_level }} class="image-row__heading">{{ header_text }}</{{ section.settings.header_level }}>
            {% endif %}
            {% if subheader_text != blank %}
              <div class="image-row__subheading">{{ subheader_text }}</div>
            {% endif %}
          </div>
        {% if ext_link != blank %}</a>{% endif %}
      {% endif %}
    {% endfor %}
  </div>

  {%- if section.settings.enable_border -%}
    <div
      class="border-section-{{ section.id }} border-section row"
      data-section-id="{{ section.id }}">

      {% case section.settings.border_width %}
        {% when '25%' %}
          {%- assign border_width = 'grid--1-col grid--2-col-tablet grid--4-col-desktop' -%}
        {% when '33%' %}
          {%- assign border_width = 'grid--1-col grid--1-col-tablet grid--3-col-desktop' -%}
        {% when '50%' %}
          {%- assign border_width = 'grid--1-col grid--2-col-tablet grid--2-col-desktop' -%}
        {% when '100%' %}
          {%- assign border_width = 'grid--1-col grid--1-col-tablet grid--1-col-desktop' -%}
      {% endcase %}

      <div class="border-section__container border-section grid {{ border_width }}">
        <div class="border-section__border grid__item"></div>
      </div>
    </div>
  {%- endif -%}
</div>

