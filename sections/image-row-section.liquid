<script type="text/javascript">
  var pep = pep || {};
  /*
   * function scrollOnClick()
   *  Scrolls target element into view. Interval is set in the case where after the initial scroll, the
   *  element is moved out of the viewport by lazy loaded images. In this case, scrolling continues
   *  every .5 seconds until target element is in view.
   */
  pep.scrollOnClick = function(elemId){
    if(elemId) {
      var elem = document.getElementById(elemId);
      if (!elem) {
        return null;
      }
      /*!
       * Determine if an element is in the viewport
       * (c) 2017 Chris Ferdinandi, MIT License, https://gomakethings.com
       * @param  {Node}    elem The element
       * @return {Boolean}      Returns true if element is in the viewport
       */
      var isInViewport = function(e) {
        var distance = e.getBoundingClientRect();
        return (
          distance.top >= 0 &&
          distance.left >= 0 &&
          distance.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
          distance.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
      };
      elem.scrollIntoView();
      var scrollToElement = function() {
        if(isInViewport(elem)) {
          clearInterval(scrollInterval);
        } else {
          elem.scrollIntoView();
        }
      }
      var scrollInterval = setInterval(scrollToElement, 500);
    }
  }
</script>

