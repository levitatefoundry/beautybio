{{ 'lp-spf-card-list.css' | asset_url | stylesheet_tag }}

<section class="lp-spf-card-list" style="padding-top: {{ section.settings.padding_top_desktop }}px; padding-bottom: {{ section.settings.padding_bottom_desktop }}px;">
  <div class="section section--vertical-padding-none">
    <div class="lp-spf-card-list__container">
      {% if section.settings.heading != blank %}
        <h2 class="lp-spf-card-list__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.blocks.size > 0 %}
        <div class="lp-spf-card-list__cards">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'spf_card' %}
                <div class="lp-spf-card-list__card" {{ block.shopify_attributes }}>
                  {% if block.settings.card_image %}
                    <div class="lp-spf-card-list__card-image">
                      <img src="{{ block.settings.card_image | img_url: '300x300' }}" 
                           alt="{{ block.settings.card_image.alt | default: block.settings.card_title }}"
                           loading="lazy">
                    </div>
                  {% endif %}
                  
                  <div class="lp-spf-card-list__card-content">
                    {% if block.settings.card_title != blank %}
                      <h3 class="lp-spf-card-list__card-title">{{ block.settings.card_title }}</h3>
                    {% endif %}
                    
                    {% if block.settings.card_text != blank %}
                      <div class="lp-spf-card-list__card-text">{{ block.settings.card_text }}</div>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .lp-spf-card-list {
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
    }
  }
</style>

{% schema %}
{
  "name": "LP SPF Card List",
  "tag": "section",
  "class": "lp-spf-card-list-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "More than SPF. Skincare You'll Actually Love."
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 60
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "spf_card",
      "name": "SPF Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Backed by Real Science"
        },
        {
          "type": "richtext",
          "id": "card_text",
          "label": "Card Text",
          "default": "<p>Broad-spectrum sunscreen actives like zinc oxide, avobenzone, and antioxidants.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LP SPF Card List",
      "blocks": [
        {
          "type": "spf_card",
          "settings": {
            "card_title": "Backed by Real Science",
            "card_text": "<p>Broad-spectrum sunscreen actives like zinc oxide, avobenzone, and antioxidants.</p>"
          }
        },
        {
          "type": "spf_card",
          "settings": {
            "card_title": "One Step, All Benefits",
            "card_text": "<p>A hybrid SPF that delivers superior hydration, protection, and radiance - no white cast required.</p>"
          }
        },
        {
          "type": "spf_card",
          "settings": {
            "card_title": "Daily Defense, Effortless Finish",
            "card_text": "<p>Breathable, non-greasy coverage with zero white cast and a seamless, natural look.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}