{%- if settings.quick_search_suggested_heading != blank -%}
  <h2 class="quick-search__suggested-header ff-body fs-body-100 t-subdued">
    {{ settings.quick_search_suggested_heading }}
  </h2>
{%- endif -%}

{%- for link in settings.quick_search_suggested_links -%}
  <a class="quick-search__result" href="{{ link.url }}">
    <div class="quick-search__result-details ff-body fs-body-75">
      <div class="quick-search__result-heading">{{ link.title }}</div>
    </div>
  </a>
{%- endfor -%}
